              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order_info\": {\n    \"order_id\": \"ORDER_TEST_002\",\n    \"amount\": 3000\n  },\n  \"status\": \"failed\",\n  \"transaction_amount\": 0,\n  \"bank_reference\": null,\n  \"payment_mode\": null,\n  \"payment_time\": null,\n  \"error_message\": \"Payment failed due to insufficient funds\",\n  \"gateway_response\": {\n    \"error_code\": \"INSUFFICIENT_FUNDS\",\n    \"error_message\": \"Payment failed due to insufficient funds\"\n  }\n}"
